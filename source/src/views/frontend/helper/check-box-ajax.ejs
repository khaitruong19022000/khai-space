
<% 
    checkBoxHelper = (name, slug, currentSlug) => {
        let xhtmlStatus = '';
        let link = `product/`
        let checked = '';
        if (slug === currentSlug) checked = `checked="checked"`
        xhtmlStatus = `<div class="dropdown-item"><input id="${name}" onchange="changeCheckBox('${link}')" value="${slug}" type="checkbox" class="filter" ${checked}>${name}</div>`

        return xhtmlStatus;

    }    
%>


